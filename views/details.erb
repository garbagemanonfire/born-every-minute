
<div id="container">
    <div id="intro" >
        <h2>Suckers! Page</h2>
        <p><u><a href='/suckers'>Return to listing</a></u><p>
        <table border="1">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Twitter</th>
            </tr>
            <tr>
                <% session["users"].each_with_index do |value, index| %>
                <% if index == user_index.to_i %>
                    <td><%= value[:username] %></td>
                    <td><%= value[:email] %></td>
                    <td><%= value[:twitter] %></td>
                <% end %>
            </tr>
            <% end %>
          </tr>
        </table>
    </div>
</div>